<div class="px-3">
<h1>Create new customer</h1>

<%= form_for @customer do |f| %>

  <p>Name: <%= f.text_field :name%></p>
  <p>Phone: <%= f.text_field :phone%></p>
  <p>Desc: <%= f.text_field :description%></p>
  <p>Black list: <%= f.check_box  :blacklist%></p>

  <p><%= f.submit "Создать"%></p>

<% end %>
</div>
